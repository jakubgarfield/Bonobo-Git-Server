@model Bonobo.Git.Server.Models.RepositoryDetailModel
@{
    ViewBag.Title = Resources.Delete_Title;
}

<h1>@Resources.Confirm</h1>
<div>
    <p class="summary-error">@String.Format(Resources.Delete_ConfirmationText, Model.Name)</p>
</div>

@using (Html.BeginForm("Delete", "Repository", FormMethod.Post, new { @class = "pure-form" }))
{
    <fieldset class="deleteForm">
        @Html.HiddenFor(m => m.Name)
        <div class="pure-controls">
            <a class="pure-button" href="@Url.Action("Index")"><i class="fa fa-long-arrow-left"></i> @Resources.Delete_Back</a>
            <button type="submit" class="pure-button pure-button-primary"><i class="fa fa-trash-o"></i> @Resources.Delete_Confirm</button>
        </div>
    </fieldset>
}